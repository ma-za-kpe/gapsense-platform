# ============================================================================
# GapSense Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env (it's in .gitignore)
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql+asyncpg://gapsense:your_password_here@localhost:5432/gapsense

# ============================================================================
# AI PROVIDERS (with automatic fallback: Anthropic → Grok → Rule-based)
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here
GROK_API_KEY=xai-your-key-here

# ============================================================================
# WHATSAPP CLOUD API
# ============================================================================
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# ============================================================================
# AWS
# ============================================================================
AWS_REGION=af-south-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
SQS_QUEUE_URL=https://sqs.af-south-1.amazonaws.com/123456789/gapsense-messages.fifo
S3_MEDIA_BUCKET=gapsense-media-local

# ============================================================================
# AUTH (Cognito)
# ============================================================================
COGNITO_USER_POOL_ID=af-south-1_xxxxx
COGNITO_CLIENT_ID=your_client_id_here

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=local
LOG_LEVEL=DEBUG
DEBUG=true

# ============================================================================
# DATA PATH (for proprietary IP)
# ============================================================================
# Point to your gapsense-data repo
GAPSENSE_DATA_PATH=/path/to/gapsense-data

# ============================================================================
# OPTIONAL: RATE LIMITING
# ============================================================================
ANTHROPIC_MAX_REQUESTS_PER_MINUTE=50
ANTHROPIC_MAX_CONCURRENT_REQUESTS=10
